<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/left_avatar_image_view"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        app:srcCompat="@drawable/robot_avatar" />

    <TextView
        android:id="@+id/left_message_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/message_style"
        android:maxWidth="200dp"
        android:padding="10dp"
        android:text="test"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/right_avatar_image_view"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="end"
        android:layout_marginBottom="10dp"
        app:srcCompat="@drawable/user_avatar" />

    <TextView
        android:id="@+id/right_message_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:background="@drawable/message_style"
        android:maxWidth="200dp"
        android:padding="10dp"
        android:text="test"
        android:textSize="16sp"
        android:textStyle="bold" />


</LinearLayout>